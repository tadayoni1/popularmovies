<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <ImageView
        android:id="@+id/movie_poster_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:tint="@drawable/list_item_movie_touch_selector"
        tools:src="@drawable/sample_movie_poster" />

    <ImageButton
        android:id="@+id/favorite"
        android:layout_width="@dimen/main_activity_favorite_dimensions"
        android:layout_height="@dimen/main_activity_favorite_dimensions"
        android:layout_gravity="top|end"
        android:layout_margin="@dimen/default_margin"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        android:src="@android:drawable/btn_star_big_off" />

</FrameLayout>